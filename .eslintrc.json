{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": [
      "off"
    ],
    "comma-dangle": [
      "off"
    ],
    "prefer-const": [
      "off"
    ],
    "arrow-parens": [
      "off"
    ],
    "import/extensions": [
      "off"
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-prototype-builtins": [
      "off"
    ],
    "max-len": [
      "error",
      120
    ],
    "no-param-reassign": [
      "off"
    ],
    "no-confusing-arrow": [
      "off"
    ],
    "no-plusplus": [
      "off"
    ]
  }
}
